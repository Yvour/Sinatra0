<form method="post" action="/table_orders/new">  <label for="table_order[waiter_id]"><strong>Waiter:</strong></label>          <select id = "table_order[waiter_id]" name = "table_order[waiter_id]">                    <% @waiters.each do |waiter| %>                    <option value = <%= waiter.id %>><%= waiter.waiter_name %></option>                    <% end %>          </select>          <br><label for="table_order[table_id]"><strong>Table:</strong></label>                    <select id = "table_order[table_id]" name = "table_order[table_id]">                    <% @tables.each do |table| %>                    <option value = <%= table.id %>><%= table.number %>|<%= table.description %></option>                    <% end %>          </select>          <table id = "table_order[order_elements]" name = "table_order[order_elements]">                    <thead>                              <tr><td>Number</td><td>Name/Price</td><td>Quantity</td></tr>                    </thead>                    <tbody>                              <% @count = 0; %>                              <% while (@count<6) do %>                              <tr>                                        <td>                                                  <%= (@count.to_i+1).to_s %>.                                        </td>                                        <td>                                        <select name = "table_order[order_elementes][<%= @count.to_s %>][meal_id]">                                                 <option value = 0>...</option>                                                  <%  @meals.each do |meal| %>                                                  <option value = <%= meal.id %>>                                                             Name:  <%= meal.name %> Price: <%= meal.price %> </option>                                                  <%  end %>                                        </select></td>                                                                              <td style = "width:90px">                                        <select name = "table_order[order_elementes][<%= @count.to_s %>][quantity]">                                                  <% @size = 1; while (@size < 10) do %>                                                  <option value = <%= @size %>>&nbsp;&nbsp;&nbsp;&nbsp; <%= @size %>   &nbsp;&nbsp;&nbsp;&nbsp;</option>                                                  <% @size+=1; end %>                                        </select></td>                                                                                                        </tr>                              <% @count+=1; end %>                    </tbody>          </table>          <input type="submit" name="submit" value="Submit order"></form>